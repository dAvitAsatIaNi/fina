@model ProductDiagramViewModel
@{
    ViewData["Title"] = "Products Diagram";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-bordered text-center">
    <thead>
    <tr>
        <th>Product Name</th>
        @{
            var diagramStart = new DateTime(2025, 1, 1);
            var diagramEnd = new DateTime(2025, 12, 31);
            var allDates = new List<DateTime>();
            for (var d = diagramStart; d <= diagramEnd; d = d.AddDays(1))
            {
                allDates.Add(d);
                <th>@d.ToString("dd-MM-yyyy")</th>
            }
        }
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.Name</td>
            @foreach (var d in allDates)
            {
                var inRange = d >= product.StartDate && d <= product.EndDate;
                <td style="background-color:@(inRange ? "lightgreen" : "white")"></td>
            }
        </tr>
    }
    </tbody>
</table>